{
  "manifest_version": 3,
  "name": "Based Marks",
  "author": "https://github.com/AradArvin",
  "version": "1.0",
  "description": "Manage bookmarks using a native host",
  "permissions": ["bookmarks", "downloads"],
  "action": {
    "default_title": "Manage bookmarks",
    "default_popup": "popup/popup.html",
    "default_icon": {
        "16": "assets/extension.png",
        "32": "assets/extension.png"
    }
  },
  "icons": {
    "16": "assets/extension.png",
    "32": "assets/extension.png",
    "64": "assets/extension.png"
  }
}
